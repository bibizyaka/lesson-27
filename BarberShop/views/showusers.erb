
<table class="table table-striped">
	<thead style ="text-align: center">
		<tr>
			<th>Name</th>
			<th>Phone</th>
			<th>Date of Signup</th>
			<th>Barber</th>
			<th>Color</th>
		</tr>
	</thead>

	<tbody>
		<% @results.each do |row| %>
			<tr>
				<td><%= row['username'] %></td>
				<td><%= row['phone'] %></td>
				<td><%= row['datestamp'] %></td>
				<td><%= row['barber'] %></td>
				<td style="text-align: center;background-color:<%=row['color']%>"><%= row['color'] %></td>
			</tr>
		<% end %>
	</tbody>

</table>
